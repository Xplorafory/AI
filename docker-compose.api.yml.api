services:
  db:
    image: pgvector/pgvector:pg16
    container_name: xploraforys_pg
    restart: unless-stopped
    env_file:
      - infra/infra.env
    ports:
      - "${PGPORT:-5432}:5432"
    volumes:
      - pgdata:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${PGUSER} -d ${PGDATABASE} -h localhost"]
      interval: 3s
      timeout: 3s
      retries: 20

  api:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: xploraforys_api
    env_file:
      - infra/infra.env
    environment:
      # Make sure PG_DSN exists in infra/infra.env or set here:
      # PG_DSN: postgresql://xploraforys:xploraforys@db:5432/xploraforys
      # If you run DB outside compose, set the host to localhost instead of db
      OPENAI_API_KEY: ${OPENAI_API_KEY:-}
      EMB_MODEL: ${EMB_MODEL:-text-embedding-3-small}
      CHAT_MODEL: ${CHAT_MODEL:-gpt-4o-mini}
      DEFAULT_LANG: ${DEFAULT_LANG:-en-US}
    ports:
      - "8000:8000"
    depends_on:
      db:
        condition: service_healthy

volumes:
  pgdata:
